{
  "name": "react-shopper",
  "version": "0.1.0",
  "description": "Ecommerce app made with create-react-app client and Node server",
  "engines": {
    "node": "14.15.4"
  },
  "scripts": {
    "start": "node server",
    "dev:server": "nodemon server",
    "dev:client": "cd client && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm install && npm run build"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "node-fetch": "^2.0.0",
    "stripe": "^8.222.0",
    "use-shopping-cart": "2.1.0"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
